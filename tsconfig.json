
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "include": ["index.tsx", "App.tsx", "geminiService.ts", "types.ts", "constants.tsx", "services.ts", "components_view.tsx", "components/**/*.ts", "components/**/*.tsx"],
  "exclude": ["node_modules", "dist", "vite.config.ts", "postcss.config.js", "tailwind.config.js"]
}
